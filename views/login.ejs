<div class="container">

  <div class="logo"><img class="logo64" src="/img/logo64.png"><br>Login</div>


  <form class="loginContainer" method="post" action="/login">

    <input class="loginField" name="username" type="text" value="" placeholder="Username"/>
    </br>

    <input class="loginField" name="password" type="password" value="" placeholder="Password"/>
    </br>
    <div class="lostPwd">Lost Password?</div>
    <input type="submit" class="submit" value="Login"/>
    <button class="register" type="reset" onclick="window.location.href='/register'">Register</button>

  </form>



</div>




